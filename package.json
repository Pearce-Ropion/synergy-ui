{
  "name": "synergy-ui",
  "version": "0.0.0",
  "description": "Energy Monitoring and Visualization System",
  "main": "index.js",
  "author": "Sarah Johnson & Pearce Ropion",
  "private": false,
  "scripts": {
    "dev": "NODE_ENV=development parcel example/index.html -p 8082 -d dist",
    "build": "yarn build:clean && yarn build:dist && yarn build:css && yarn build:sass",
    "build:clean": "rimraf dist",
    "build:dist": "NODE_ENV=production rollup --config rollup.config.js src/index.js",
    "build:css": "node-sass --importer=node_modules/node-sass-tilde-importer src/styles/*.scss dist/bundle.css",
    "build:sass": "cp src/styles/_searchPane.scss dist/_searchPane.scss",
    "lint": "eslint --config ./.eslintrc.yaml --fix src index.js",
    "test": "NODE_ENV=test jest --config jest.config.js",
    "test:watch": "yarn test --watch",
    "test:cov": "yarn test --coverage",
    "prepare": "yarn build"
  }
}
